# Empathetic AI Testing Framework Configuration
# Copy this file to .env and fill in your values

# API Keys (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Optional: Default model for testing
EMPATHETIC_DEFAULT_MODEL=gpt-3.5-turbo

# Optional: Custom config file path
EMPATHETIC_CONFIG=./empathetic.yaml

# API Server Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///./empathetic.db

# Optional: Debug mode
DEBUG=false

# Optional: API server settings
API_HOST=127.0.0.1
API_PORT=8000

# Community Validation Settings
MAX_VALIDATORS_PER_REQUEST=10
MIN_VALIDATORS_FOR_CONSENSUS=3

# Optional: External services
LANGFUSE_API_KEY=
SENTRY_DSN=